
{{#each blogs as |blog| }}
{{!-- loops though blog info array --}}

<div class="row align-center mb-5">
    <div class="col-md-6">
       <a href = "/blog/{{blog.id}}"><h2>{{blog.title}}</h2></a>
    <p> {{blog.content}}</p>
    </div>
    <div class="col-md-6">
        <h3>{{blog.created_date}}</h3>
        <p>Created by: {{blog.user.username}}</p>
    </div>
</div>
{{/each}}